  <sql id="Base_Column_List" >
    PG.ID AS PG_ID,
    PG.CODE AS PG_CODE,
    PG.NAME AS PG_NAME,
    PG.SCREEN_SIZE AS PG_SCREEN_SIZE,
    PG.TMP_FLG AS PG_TMP_FLG,
